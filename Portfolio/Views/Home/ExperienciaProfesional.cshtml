@model Portfolio.Models.HomeIndexViewModel

@{
    ViewData["Title"] = "Experiencia profesional";
}

<div class="container">
    <div class="text-center mb-4">
        <h1 class="display-4">Experiencia Profesional</h1>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <ul class="list-group list-group-flush">
                    @foreach (var experiencia in Model.ExperienciasProfesionales)
                    {
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-md-9">
                                    <h5>@experiencia.Empresa</h5>
                                    <p class="mb-1">@experiencia.Puesto</p>
                                    <p class="mb-1">@experiencia.Descripcion</p>
                                </div>
                                <div class="col-md-3">
                                    <p class="text-end">
                                        @experiencia.FechaInicio.ToString("MMM yyyy") -
                                        @if (experiencia.FechaFin.HasValue)
                                        {
                                            @experiencia.FechaFin.Value.ToString("MMM yyyy")
                                        }
                                        else
                                        {
                                            <text>Actualmente</text>
                                        }
                                    </p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
