
@if (Model.HomeIndexViewModel.Proyectos is not null)
{
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Trabajos recientes</h1>
        <p>Aquí puedes ver alguno de mis trabajos más recientes</p>
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
            @foreach (var proyecto in Model.HomeIndexViewModel.Proyectos)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen proyecto" />
                        <h5 class="card-title p-2">@proyecto.Titulo</h5>
                        <p class="card-text p-2">@proyecto.Descripcion</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                    </div>

                </div>
            }
        </div>

    </div>
}
